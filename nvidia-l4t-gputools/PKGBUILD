pkgname=nvidia-l4t-gputools
pkgver=32.6.1_20210726122000
pkgrel=1
pkgdesc='NVIDIA dgpu helper Package'
arch=(aarch64)
url='https://repo.download.nvidia.com/jetson/'
license=('custom')
depends=()
source=('https://repo.download.nvidia.com/jetson/t210/pool/main/n/nvidia-l4t-gputools/nvidia-l4t-gputools_32.6.1-20210726122000_arm64.deb')
sha256sums=('964e8911dc536c707250695d70159fbaeee401f35abac685545f1442a2b140ba')

prepare() {
  mkdir -p root
  tar xvf data.tar* -C root
}

package() {
  cp -a root/. $pkgdir/
  # Arch on ARM doesn't use multilib
  if test -d $pkgdir/lib/aarch64-linux-gnu; then
    cp -a $pkgdir/lib/aarch64-linux-gnu/. $pkgdir/lib/
    rm -rf $pkgdir/lib/aarch64-linux-gnu
  fi
  if test -d $pkgdir/usr/lib/aarch64-linux-gnu; then
    cp -a $pkgdir/usr/lib/aarch64-linux-gnu/. $pkgdir/usr/lib/
    rm -rf $pkgdir/usr/lib/aarch64-linux-gnu
  fi
}