pkgname=cuda-driver-dev-10-2
pkgver=10.2.300_1
pkgrel=1
pkgdesc='CUDA Driver native dev stub library'
arch=(aarch64)
url='https://repo.download.nvidia.com/jetson/'
license=('custom')
depends=()
source=('https://repo.download.nvidia.com/jetson/common/pool/main/c/cuda-cudart/cuda-driver-dev-10-2_10.2.300-1_arm64.deb')
sha256sums=('5ea760773de2685acfac3931bcdc2eff3a18eceb28fc86f80061e215e9e81456')

prepare() {
  mkdir -p root
  tar xvf data.tar* -C root
}

package() {
  cp -a root/. $pkgdir/
  # Arch on ARM doesn't use multilib
  if test -d $pkgdir/lib/aarch64-linux-gnu; then
    cp -a $pkgdir/lib/aarch64-linux-gnu/. $pkgdir/lib/
    rm -rf $pkgdir/lib/aarch64-linux-gnu
  fi
  if test -d $pkgdir/usr/lib/aarch64-linux-gnu; then
    cp -a $pkgdir/usr/lib/aarch64-linux-gnu/. $pkgdir/usr/lib/
    rm -rf $pkgdir/usr/lib/aarch64-linux-gnu
  fi
}
