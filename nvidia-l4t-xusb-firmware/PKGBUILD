pkgname=nvidia-l4t-xusb-firmware
pkgver=32.6.1_20210726122000
pkgrel=1
pkgdesc='NVIDIA USB Firmware Package'
arch=(aarch64)
url='https://repo.download.nvidia.com/jetson/'
license=('custom')
depends=('nvidia-l4t-tools=32.6.1_20210726122000' 'nvidia-l4t-init>>32.6_0' 'nvidia-l4t-init<<32.7_0' )
source=('https://repo.download.nvidia.com/jetson/t210/pool/main/n/nvidia-l4t-xusb-firmware/nvidia-l4t-xusb-firmware_32.6.1-20210726122000_arm64.deb')
sha256sums=('55e24027e7b7f66f1ccd78d07a07ec6f40dce4af5553d9c6bd240508cf44ba00')

prepare() {
  mkdir -p root
  tar xvf data.tar* -C root
}

package() {
  cp -a root/. $pkgdir/
  # Arch on ARM doesn't use multilib
  if test -d $pkgdir/lib/aarch64-linux-gnu; then
    cp -a $pkgdir/lib/aarch64-linux-gnu/. $pkgdir/lib/
    rm -rf $pkgdir/lib/aarch64-linux-gnu
  fi
  if test -d $pkgdir/usr/lib/aarch64-linux-gnu; then
    cp -a $pkgdir/usr/lib/aarch64-linux-gnu/. $pkgdir/usr/lib/
    rm -rf $pkgdir/usr/lib/aarch64-linux-gnu
  fi
}