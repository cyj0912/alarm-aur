pkgname=cuda-compiler-10-2
pkgver=10.2.460_1
pkgrel=1
pkgdesc='CUDA compiler'
arch=(aarch64)
url='https://repo.download.nvidia.com/jetson/'
license=('custom')
depends=('cuda-cuobjdump-10-2>=10.2.300' 'cuda-nvcc-10-2>=10.2.300' 'cuda-nvprune-10-2>=10.2.300' )
source=('https://repo.download.nvidia.com/jetson/common/pool/main/c/cuda-compiler-10-2/cuda-compiler-10-2_10.2.460-1_arm64.deb')
sha256sums=('9d2ccb1a43782e3b9728c35a81525f229fac1a4e422708da58c00e98e8fdcf1e')

prepare() {
  mkdir -p root
  tar xvf data.tar* -C root
}

package() {
  cp -a root/. $pkgdir/
  # Arch on ARM doesn't use multilib
  if test -d $pkgdir/lib/aarch64-linux-gnu; then
    cp -a $pkgdir/lib/aarch64-linux-gnu/. $pkgdir/lib/
    rm -rf $pkgdir/lib/aarch64-linux-gnu
  fi
  if test -d $pkgdir/usr/lib/aarch64-linux-gnu; then
    cp -a $pkgdir/usr/lib/aarch64-linux-gnu/. $pkgdir/usr/lib/
    rm -rf $pkgdir/usr/lib/aarch64-linux-gnu
  fi
}