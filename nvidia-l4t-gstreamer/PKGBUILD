pkgname=nvidia-l4t-gstreamer
pkgver=32.6.1_20210916211029
pkgrel=1
pkgdesc='NVIDIA GST Application files'
arch=(aarch64)
url='https://repo.download.nvidia.com/jetson/'
license=('custom')
depends=('nvidia-l4t-camera=32.6.1_20210916211029' 'nvidia-l4t-cuda=32.6.1_20210916211029|cuda_drivers' 'nvidia-l4t-multimedia=32.6.1_20210916211029' 'nvidia-l4t-multimedia-utils=32.6.1_20210916211029' )
source=('https://repo.download.nvidia.com/jetson/t210/pool/main/n/nvidia-l4t-gstreamer/nvidia-l4t-gstreamer_32.6.1-20210916211029_arm64.deb')
sha256sums=('09349648604d6af55f388a6398517c78c0172cc7289e8b2bf1274cabfb373ab3')

prepare() {
  mkdir -p root
  tar xvf data.tar* -C root
}

package() {
  cp -a root/. $pkgdir/

  # On Arch, sbin is a symlink to bin
  if test -d $pkgdir/usr/sbin; then
    cp -a $pkgdir/usr/sbin/. $pkgdir/usr/bin/
    rm -rf $pkgdir/usr/sbin
  fi

  # Arch on ARM doesn't use multilib
  if test -d $pkgdir/lib/aarch64-linux-gnu; then
    cp -a $pkgdir/lib/aarch64-linux-gnu/. $pkgdir/lib/
    rm -rf $pkgdir/lib/aarch64-linux-gnu
  fi
  if test -d $pkgdir/usr/lib/aarch64-linux-gnu; then
    cp -a $pkgdir/usr/lib/aarch64-linux-gnu/. $pkgdir/usr/lib/
    rm -rf $pkgdir/usr/lib/aarch64-linux-gnu
  fi
}
