pkgname=libnvinfer-plugin-dev
pkgver=8.0.1_1+cuda10.2
pkgrel=1
pkgdesc='TensorRT plugin libraries'
arch=(aarch64)
url='https://repo.download.nvidia.com/jetson/'
license=('custom')
depends=('libnvinfer-dev=8.0.1_1+cuda10.2' 'libnvinfer-plugin8=8.0.1_1+cuda10.2' )
source=('https://repo.download.nvidia.com/jetson/common/pool/main/t/tensorrt/libnvinfer-plugin-dev_8.0.1-1+cuda10.2_arm64.deb')
sha256sums=('4dabae4f5ea8f3eb54dbd36cf3dde3d038fae2a857529b869844b05cec77092a')

prepare() {
  mkdir -p root
  tar xvf data.tar* -C root
}

package() {
  cp -a root/. $pkgdir/
  # Arch on ARM doesn't use multilib
  if test -d $pkgdir/lib/aarch64-linux-gnu; then
    cp -a $pkgdir/lib/aarch64-linux-gnu/. $pkgdir/lib/
    rm -rf $pkgdir/lib/aarch64-linux-gnu
  fi
  if test -d $pkgdir/usr/lib/aarch64-linux-gnu; then
    cp -a $pkgdir/usr/lib/aarch64-linux-gnu/. $pkgdir/usr/lib/
    rm -rf $pkgdir/usr/lib/aarch64-linux-gnu
  fi
}
