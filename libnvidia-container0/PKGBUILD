pkgname=libnvidia-container0
pkgver=0.10.0+jetpack
pkgrel=1
pkgdesc='NVIDIA container runtime library'
arch=(aarch64)
url='https://repo.download.nvidia.com/jetson/'
license=('custom')
depends=()
source=('https://repo.download.nvidia.com/jetson/common/pool/main/libn/libnvidia-container/libnvidia-container0_0.10.0+jetpack_arm64.deb')
sha256sums=('ae42097ba7c59ac9f97fac96811c600c36d69c3f1c07e4d64535d22f45f2fbb5')

prepare() {
  mkdir -p root
  tar xvf data.tar* -C root
}

package() {
  cp -a root/. $pkgdir/
  # Arch on ARM doesn't use multilib
  if test -d $pkgdir/lib/aarch64-linux-gnu; then
    cp -a $pkgdir/lib/aarch64-linux-gnu/. $pkgdir/lib/
    rm -rf $pkgdir/lib/aarch64-linux-gnu
  fi
  if test -d $pkgdir/usr/lib/aarch64-linux-gnu; then
    cp -a $pkgdir/usr/lib/aarch64-linux-gnu/. $pkgdir/usr/lib/
    rm -rf $pkgdir/usr/lib/aarch64-linux-gnu
  fi
}
