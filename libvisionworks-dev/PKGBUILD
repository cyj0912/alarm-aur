pkgname=libvisionworks-dev
pkgver=1.6.0.501
pkgrel=1
pkgdesc='Development files for NVIDIA's VisionWorks Library'
arch=(all)
url='https://repo.download.nvidia.com/jetson/'
license=('custom')
depends=('libvisionworks=1.6.0.501' )
source=('https://repo.download.nvidia.com/jetson/common/pool/main/libv/libvisionworks-dev/libvisionworks-dev_1.6.0.501_all.deb')
sha256sums=('f6bf7959ced8220852c74f10461c492a609199e9865a4b8f5a1323a15356b40b')

prepare() {
  mkdir -p root
  tar xvf data.tar* -C root
}

package() {
  cp -a root/. $pkgdir/
  # Arch on ARM doesn't use multilib
  if test -d $pkgdir/lib/aarch64-linux-gnu; then
    cp -a $pkgdir/lib/aarch64-linux-gnu/. $pkgdir/lib/
    rm -rf $pkgdir/lib/aarch64-linux-gnu
  fi
  if test -d $pkgdir/usr/lib/aarch64-linux-gnu; then
    cp -a $pkgdir/usr/lib/aarch64-linux-gnu/. $pkgdir/usr/lib/
    rm -rf $pkgdir/usr/lib/aarch64-linux-gnu
  fi
}