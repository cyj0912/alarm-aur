pkgname=cuda-documentation-10-2
pkgver=10.2.300_1
pkgrel=1
pkgdesc='CUDA documentation'
arch=(aarch64)
url='https://repo.download.nvidia.com/jetson/'
license=('custom')
depends=()
source=('https://repo.download.nvidia.com/jetson/common/pool/main/c/cuda-documentation/cuda-documentation-10-2_10.2.300-1_arm64.deb')
sha256sums=('d8e8c62156516d5eb2dea0ba49abd1b5cecae010872e0e71650e97a1ccd2e005')

prepare() {
  mkdir -p root
  tar xvf data.tar* -C root
}

package() {
  cp -a root/. $pkgdir/
  # Arch on ARM doesn't use multilib
  if test -d $pkgdir/lib/aarch64-linux-gnu; then
    cp -a $pkgdir/lib/aarch64-linux-gnu/. $pkgdir/lib/
    rm -rf $pkgdir/lib/aarch64-linux-gnu
  fi
  if test -d $pkgdir/usr/lib/aarch64-linux-gnu; then
    cp -a $pkgdir/usr/lib/aarch64-linux-gnu/. $pkgdir/usr/lib/
    rm -rf $pkgdir/usr/lib/aarch64-linux-gnu
  fi
}