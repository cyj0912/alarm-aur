pkgname=libnvinfer-samples
pkgver=8.0.1_1+cuda10.2
pkgrel=1
pkgdesc='TensorRT samples'
arch=(all)
url='https://repo.download.nvidia.com/jetson/'
license=('custom')
depends=('libnvinfer-dev=8.0.1_1+cuda10.2|libnvinfer_dev_cross_aarch64=8.0.1_1+cuda10.2' 'libnvinfer-plugin-dev=8.0.1_1+cuda10.2|libnvinfer_plugin_dev_cross_aarch64=8.0.1_1+cuda10.2' 'libnvparsers-dev=8.0.1_1+cuda10.2|libnvparsers_dev_cross_aarch64=8.0.1_1+cuda10.2' 'libnvonnxparsers-dev=8.0.1_1+cuda10.2|libnvonnxparsers_dev_cross_aarch64=8.0.1_1+cuda10.2' 'cuda-cudart-dev-10-2|cuda_cudart_cross_aarch64_10_2' )
source=('https://repo.download.nvidia.com/jetson/common/pool/main/t/tensorrt/libnvinfer-samples_8.0.1-1+cuda10.2_all.deb')
sha256sums=('6eadd053f8e840f17ee8ea5cde98b2b170b91a763cc5cf0bda5a8c59a4d5390d')

prepare() {
  mkdir -p root
  tar xvf data.tar* -C root
}

package() {
  cp -a root/. $pkgdir/
  # Arch on ARM doesn't use multilib
  if test -d $pkgdir/lib/aarch64-linux-gnu; then
    cp -a $pkgdir/lib/aarch64-linux-gnu/. $pkgdir/lib/
    rm -rf $pkgdir/lib/aarch64-linux-gnu
  fi
  if test -d $pkgdir/usr/lib/aarch64-linux-gnu; then
    cp -a $pkgdir/usr/lib/aarch64-linux-gnu/. $pkgdir/usr/lib/
    rm -rf $pkgdir/usr/lib/aarch64-linux-gnu
  fi
}