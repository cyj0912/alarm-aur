pkgname=libvisionworks-tracking-dev
pkgver=0.88.2.501
pkgrel=1
pkgdesc='Development files for Tracking module for NVIDIA's VisionWorks Library'
arch=(aarch64)
url='https://repo.download.nvidia.com/jetson/'
license=('custom')
depends=('libvisionworks-tracking=0.88.2.501' 'libvisionworks-samples>=1.6.0' )
source=('https://repo.download.nvidia.com/jetson/common/pool/main/libv/libvisionworks-tracking-dev/libvisionworks-tracking-dev_0.88.2.501_arm64.deb')
sha256sums=('55b4cd272ed5cb299d708e7fda9569f01e5c6e5ccc760005c20f456e5b6b6282')

prepare() {
  mkdir -p root
  tar xvf data.tar* -C root
}

package() {
  cp -a root/. $pkgdir/
  # Arch on ARM doesn't use multilib
  if test -d $pkgdir/lib/aarch64-linux-gnu; then
    cp -a $pkgdir/lib/aarch64-linux-gnu/. $pkgdir/lib/
    rm -rf $pkgdir/lib/aarch64-linux-gnu
  fi
  if test -d $pkgdir/usr/lib/aarch64-linux-gnu; then
    cp -a $pkgdir/usr/lib/aarch64-linux-gnu/. $pkgdir/usr/lib/
    rm -rf $pkgdir/usr/lib/aarch64-linux-gnu
  fi
}